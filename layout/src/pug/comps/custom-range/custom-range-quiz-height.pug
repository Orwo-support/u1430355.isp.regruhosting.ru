    .label-controll__caption Высота
    .label-controll__body
        .label-controll__content

            .custom-range
                .input-suffix.custom-input#quizSizeHeight
                    input.value(
                        type="text"
                        data-calc-property="quizSizeHeight"
                        value=""
                    )
                    span.input-suffix__delimiter
                    span.input-suffix__units#quizSizeHeightUnits метры

                .custom-range__controller
                    span.status-bar
                    spna.slider
                    input.custom-range__slide(
