form.form-order#calcForm(action="http://ekranika.develop/utilities/handle-calc-results-form.php" method="POST" data-target="#calcModal" enctype="multipart/form-data")
    input(type="hidden" name="pdf" value="$PDF_FILE_URL_LINK")
    input(type="hidden" name="xls" value="$XLS_FILE_URL_LINK")
    input(type="hidden" name="txt" value="$TXT_FILE_URL_LINK")
    .controller-group
        label.controller-label ФИО
        .controller.controller__input
            label.label.label__icon
                span.controller-icon.icon-human
                    img(src="/img/icon-person.svg" alt="")
                input.input(type="text" placeholder="Как Вас зовут?" name="name" id="calcFormName")

    .controller-group
        label.controller-label Номер телефона
        .controller.controller__input.single-valid-warning
            label.label.label__icon
                span.controller-icon.icon-phone
                    img(src="/img/icon-phone.svg" alt="")
                input.input(type="text" placeholder="+7 900 000 00 00" name="phone" id="calcFormPhone")
            .validator.validator__cross
                img.valid(src="/img/icon-validator-cross-valid.svg" alt="")
                img.invalid(src="/img/icon-validator-cross-invalid.svg" alt="")
            .validator.validator__check
                img.valid(src="/img/icon-validator-check-valid.svg" alt="")
                img.invalid(src="/img/icon-validator-check-invalid.svg" alt="")

    .controller-group
        label.controller-label Email
        .controller.controller__input
            label.label.label__icon
                span.controller-icon.icon-mail
                    img(src="/img/icon-calc-mail.svg" alt="")
                input.input(type="text" placeholder="example@email.com" name="mail" id="calcFormMail")

    .controller-group
        label.controller-label Комментарий
        .controller-wrap
            span.controller-icon.icon-msg
                img(src="/img/icon-message.svg" alt="")
            textarea.textarea(placeholder="Напишите что-нибудь" name="message" id="calcFormMessage")